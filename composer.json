{
  "name": "lightspeedwp/ai-block-theme-template",
  "description": "Starter repository for WordPress block theme projects with AI support",
  "type": "wordpress-theme",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "LightspeedWP",
      "homepage": "https://github.com/lightspeedwp"
    }
  ],
  "homepage": "https://github.com/lightspeedwp/ai-block-theme-template",
  "support": {
    "issues": "https://github.com/lightspeedwp/ai-block-theme-template/issues",
    "source": "https://github.com/lightspeedwp/ai-block-theme-template"
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "scripts": {
    "phpcs": "phpcs --standard=WordPress *.php inc/ parts/ patterns/",
    "phpcbf": "phpcbf --standard=WordPress *.php inc/ parts/ patterns/",
    "lint": "composer run-script phpcs",
    "format": "composer run-script phpcbf"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}