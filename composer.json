{
  "name": "lightspeedwp/ai-block-theme-template",
  "description": "Starter repository for WordPress block theme projects with AI support",
  "type": "wordpress-theme",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "LightspeedWP",
      "homepage": "https://github.com/lightspeedwp"
    }
  ],
  "homepage": "https://github.com/lightspeedwp/ai-block-theme-template",
  "support": {
    "issues": "https://github.com/lightspeedwp/ai-block-theme-template/issues",
    "source": "https://github.com/lightspeedwp/ai-block-theme-template"
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "10up/phpcs-composer": "^3.0",
    "phpstan/phpstan": "^1.11",
    "phpstan/extension-installer": "^1.2",
    "swissspidy/phpstan-no-private": "^1.0",
    "phpstan/phpstan-deprecation-rules": "^1.1",
    "phpstan/phpstan-strict-rules": "^1.1",
    "johnbillion/wp-compat": "^1.0",
    "roave/security-advisories": "dev-latest"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "lint": "phpcs --standard=phpcs.xml .",
    "lint:fix": "phpcbf --standard=phpcs.xml .",
    "phpstan": "phpstan analyse --memory-limit=2048M",
    "test": [
      "@lint",
      "@phpstan"
    ],
    "security": "composer audit --no-dev"
  }
}
