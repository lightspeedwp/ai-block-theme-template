{
  "name": "ai-block-theme-template",
  "version": "1.0.0",
  "description": "Starter repository for WordPress block theme projects with AI support",
  "author": "LightspeedWP",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "block-theme",
    "gutenberg",
    "ai",
    "template"
  ],
  "homepage": "https://github.com/lightspeedwp/ai-block-theme-template#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightspeedwp/ai-block-theme-template.git"
    "devDependencies": {
      "ajv": "^8.12.0",
      "ajv-cli": "^5.0.0",
      "prettier": "^3.0.0"
    },
    "scripts": {
      "validate:theme-json": "npx ajv validate --spec=draft7 --all-errors -s https://schemas.wp.org/trunk/theme.json -d theme.json -d styles/**/*.json --errors=json > reports/theme-json/errors.json",
      "format:theme-json": "npx prettier --write theme.json styles/**/*.json",
      "summarise:theme-json": "node scripts/summarise-errors.js reports/theme-json/errors.json > reports/theme-json/report.md || true"
    },
  },
  "bugs": {
    "url": "https://github.com/lightspeedwp/ai-block-theme-template/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "main": "index.js",
  "dependencies": {
    "@wordpress/a11y": "^3.0.0",
    "@wordpress/block-editor": "^12.0.0",
    "@wordpress/blocks": "^12.0.0",
    "@wordpress/date": "^4.0.0",
    "@wordpress/element": "^5.0.0",
    "@wordpress/i18n": "^4.0.0",
    "@wordpress/primitives": "^3.0.0",
    "@wordpress/style-engine": "^1.0.0",
    "@wordpress/wordcount": "^3.0.0",
    "ts-jest": "29.4.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@wordpress/babel-plugin-makepot": "^5.0.0",
    "@wordpress/babel-preset-default": "^7.0.0",
    "@wordpress/browserslist-config": "^5.0.0",
    "@wordpress/dependency-extraction-webpack-plugin": "^4.0.0",
    "@wordpress/e2e-test-utils-playwright": "1.32.0",
    "@wordpress/env": "^8.0.0",
    "@wordpress/eslint-plugin": "^17.0.0",
    "@wordpress/jest-console": "^7.0.0",
    "@wordpress/jest-preset-default": "^11.0.0",
    "@wordpress/npm-package-json-lint-config": "^4.0.0",
    "@wordpress/postcss-plugins-preset": "^4.0.0",
    "@wordpress/postcss-themes": "^5.0.0",
    "@wordpress/prettier-config": "^3.0.0",
    "@wordpress/project-management-automation": "^1.0.0",
    "@wordpress/scripts": "30.25.0",
    "@wordpress/stylelint-config": "^21.0.0",
    "all-contributors-cli": "^6.26.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "30.2.0",
    "lint-staged": "^15.0.0",
    "markdownlint-cli": "^0.37.0",
    "npm-package-json-lint": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "stylelint": "^14.16.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0",
    "webpack-remove-empty-scripts": "1.1.1"
  },
  "scripts": {
    "build": "wp-scripts build",
    "build:production": "wp-scripts build --mode=production",
    "start": "wp-scripts start",
    "dev": "wp-scripts start",
    "watch": "wp-scripts start",
    "lint:js": "wp-scripts lint-js",
    "lint:css": "wp-scripts lint-style",
    "lint:php": "composer run lint",
    "lint:pkg-json": "npmPkgJsonLint .",
    "lint:md": "markdownlint *.md docs/**/*.md .github/**/*.md",
    "lint": "run-p lint:*",
    "lint:all": "npm run lint",
    "format:js": "wp-scripts format",
    "format:css": "wp-scripts lint-style --fix",
    "format:md": "markdownlint --fix *.md docs/**/*.md .github/**/*.md",
    "format": "run-p format:*",
    "test:js": "wp-scripts test-unit-js",
    "test:php": "composer run test",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test": "run-s test:js test:php test:e2e",
    "test:ci": "cross-env CI=true npm run test",
    "packages-update": "wp-scripts packages-update",
    "plugin-zip": "wp-scripts plugin-zip",
    "makepot": "wp i18n make-pot . languages/ai-block-theme-template.pot --exclude=node_modules,vendor,tests",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "env:start": "@wordpress/env start",
    "env:stop": "@wordpress/env stop",
    "env:destroy": "@wordpress/env destroy"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "wp-scripts lint-js --fix",
      "wp-scripts format"
    ],
    "*.{css,scss}": [
      "wp-scripts lint-style --fix"
    ],
    "*.php": [
      "composer run lint:fix",
      "composer run lint"
    ],
    "*.md": [
      "markdownlint --fix"
    ],
    "package.json": [
      "npmPkgJsonLint"
    ]
  }
}
