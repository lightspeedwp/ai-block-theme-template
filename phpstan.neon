parameters:
    level: 8
    paths:
        - functions.php
        - inc/
        - patterns/
    excludePaths:
        - vendor/
        - node_modules/
        - tests/
    ignoreErrors:
        # WordPress functions may not be recognized
        - '#Function [a-zA-Z_]+\(\) not found#'
        # Allow dynamic property access for WordPress objects
        - '#Access to an undefined property WP_Post::\$#'
        - '#Access to an undefined property WP_User::\$#'
        - '#Access to an undefined property WP_Term::\$#'
    checkMissingIterableValueType: false
    checkGenericClassInNonGenericObjectType: false
    reportUnmatchedIgnoredErrors: false
    # The following bootstrap file requires the Composer package 'johnbillion/wp-compat'.
    # Ensure you have run 'composer install' and the package is present in your dependencies.
    bootstrapFiles:
        - vendor/johnbillion/wp-compat/compat.php
    
includes:
    - vendor/phpstan/phpstan-deprecation-rules/rules.neon
    - vendor/phpstan/phpstan-strict-rules/rules.neon
    - vendor/swissspidy/phpstan-no-private/extension.neon