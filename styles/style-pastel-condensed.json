{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Pastel Condensed",
  "settings": {
    "color": {
      "palette": [
        { "name": "Pastel Blue", "slug": "pastel-blue", "color": "#A7C7E7" },
        { "name": "Pastel Pink", "slug": "pastel-pink", "color": "#F5C7C6" },
        { "name": "Pastel Green", "slug": "pastel-green", "color": "#B8E2D3" },
        {
          "name": "Pastel Purple",
          "slug": "pastel-purple",
          "color": "#B7AED9"
        },
        { "name": "Pastel Yellow", "slug": "pastel-yellow", "color": "#FFF5BA" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Oswald, Arial Narrow, sans-serif",
          "name": "Condensed Sans",
          "slug": "condensed-sans",
          "fontFace": [
            {
              "fontDisplay": "swap",
              "fontFamily": "Oswald",
              "fontStyle": "normal",
              "fontWeight": "400 900",
              "src": ["file:./assets/fonts/oswald/Oswald-VariableFont_wght.ttf"]
            }
          ]
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--condensed-sans)"
    },
    "color": {
      "background": "var:preset|color|pastel-blue",
      "text": "var:preset|color|pastel-purple"
    }
  }
}
