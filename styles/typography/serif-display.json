{
  "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
  "version": 3,
  "title": "Serif Display",
  "slug": "serif-display",
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--serif-display)"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--serif-display)",
          "fontWeight": "700",
          "fontStyle": "italic"
        }
      }
    }
  },
  "settings": {
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Playfair Display, serif",
          "name": "Serif Display",
          "slug": "serif-display",
          "fontFace": [
            {
              "fontDisplay": "swap",
              "fontFamily": "Playfair Display",
              "fontStyle": "normal",
              "fontWeight": "400 900",
              "src": [
                "file:./assets/fonts/playfair/PlayfairDisplay-VariableFont_wght.ttf"
              ]
            }
          ]
        }
      ]
    }
  }
}
