{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
		"version": 3,
	"title": "AI Block Theme Template",
	"description": "A modern accessible block theme for WordPress by LightSpeed.",
	"settings": {
		"appearanceTools": true,
				"styles": {
					"color": {
						"background": "var(--wp--preset--color--white)",
						"text": "var(--wp--preset--color--black)"
					},
					"typography": {
						"fontFamily": "var(--wp--preset--font-family--system-font)",
						"fontSize": "var(--wp--preset--font-size--medium)",
						"lineHeight": "1.6"
					},
					"elements": {
						"link": {
							"color": {
								"text": "var(--wp--preset--color--primary)"
							},
							":hover": {
								"color": {
									"text": "var(--wp--preset--color--primary-dark)"
								}
							}
						},
						"heading": {
							"typography": {
								"fontWeight": "700",
								"lineHeight": "1.2"
							}
						}
					},
					"blocks": {
						"core/navigation": {
							"typography": {
								"fontSize": "var(--wp--preset--font-size--medium)"
							}
						},
						"core/post-title": {
							"typography": {
								"fontSize": "var(--wp--preset--font-size--x-large)"
							}
						},
						"core/post-content": {
							"typography": {
								"lineHeight": "1.6"
							}
						},
						"core/pullquote": {
							"border": {
								"color": "var(--wp--preset--color--primary)",
								"style": "solid",
								"width": "1px 0"
							}
						},
						"core/quote": {
							"border": {
								"color": "var(--wp--preset--color--primary)",
								"style": "solid",
								"width": "0 0 0 1px"
							},
							"spacing": {
								"padding": {
									"left": "var(--wp--preset--spacing--50)"
								}
							}
						},
						"core/separator": {
							"border": {
								"color": "var(--wp--preset--color--light-gray)",
								"style": "solid",
								"width": "0 0 1px 0"
							},
							"color": {
								"text": "var(--wp--preset--color--light-gray)"
							}
						},
								"core/group": {
									"styles": [
										{
											"name": "card-gradient",
											"label": "Card Gradient",
											"description": "A visually appealing card section with a gradient background and accessible contrast.",
											"background": "linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%)",
											"borderRadius": "1rem",
											"boxShadow": "0 2px 8px rgba(0,0,0,0.08)",
											"padding": "2rem",
											"color": "#222"
										}
									]
								}
					}
				},
				{
					"fluid": {
						"min": "0.875rem",
						"max": "1rem"
					},
					"size": "1rem",
					"slug": "small"
				},
				{
					"fluid": {
						"min": "1rem",
						"max": "1.125rem"
					},
					"size": "1.125rem",
					"slug": "medium"
				},
				{
					"fluid": {
						"min": "1.125rem",
						"max": "1.25rem"
					},
					"size": "1.25rem",
					"slug": "large"
				},
				{
					"fluid": {
						"min": "1.25rem",
						"max": "2rem"
					},
					"size": "2rem",
					"slug": "x-large"
				},
				{
					"fluid": {
						"min": "2rem",
						"max": "3rem"
					},
					"size": "3rem",
					"slug": "xx-large"
				}
			]
		},
		"spacing": {
			"padding": true,
			"margin": true,
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			],
			"spacingSizes": [
				{
					"size": "clamp(1.5rem, 5vw, 2rem)",
					"slug": "30",
					"name": "1"
				},
				{
					"size": "clamp(1.8rem, 1.8rem + ((1vw - 0.48rem) * 2.885), 3rem)",
					"slug": "40",
					"name": "2"
				},
				{
					"size": "clamp(2.5rem, 8vw, 4.5rem)",
					"slug": "50",
					"name": "3"
				},
				{
					"size": "clamp(3.75rem, 10vw, 7rem)",
					"slug": "60",
					"name": "4"
				},
				{
					"size": "clamp(5rem, 5.25rem + ((1vw - 0.48rem) * 9.096), 8rem)",
					"slug": "70",
					"name": "5"
				},
				{
					"size": "clamp(7rem, 14vw, 11rem)",
					"slug": "80",
					"name": "6"
				}
			]
		},
		"border": {
			"radius": true,
			"color": true,
			"style": true,
			"width": true
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--black)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--primary-dark)"
					}
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "700",
					"lineHeight": "1.2"
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"core/post-content": {
				"typography": {
					"lineHeight": "1.6"
				}
			},
			"core/pullquote": {
				"border": {
					"color": "var(--wp--preset--color--primary)",
					"style": "solid",
					"width": "1px 0"
				}
			},
			"core/quote": {
				"border": {
					"color": "var(--wp--preset--color--primary)",
					"style": "solid",
					"width": "0 0 0 1px"
				},
				"spacing": {
					"padding": {
						"left": "var(--wp--preset--spacing--50)"
					}
				}
			},
			"core/separator": {
				"border": {
					"color": "var(--wp--preset--color--light-gray)",
					"style": "solid",
					"width": "0 0 1px 0"
				},
				"color": {
					"text": "var(--wp--preset--color--light-gray)"
				}
			}
		}
	},
		"templateParts": [
			{
				"name": "header",
				"title": "Header",
				"area": "header"
			},
			{
				"name": "footer",
				"title": "Footer",
				"area": "footer"
			}
		]
}
