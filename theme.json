{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "AI Block Theme Template",
	"description": "A modern accessible block theme for WordPress by LightSpeed with standardized design tokens.",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "620px",
			"wideSize": "1200px"
		},
		"color": {
			"custom": false,
			"customDuotone": false,
			"customGradient": false,
			"defaultDuotones": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"palette": [
				{
					"name": "Base",
					"slug": "base",
					"color": "#ffffff"
				},
				{
					"name": "Contrast",
					"slug": "contrast",
					"color": "#000000"
				},
				{
					"name": "Primary",
					"slug": "primary",
					"color": "#007cba"
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "#006ba1"
				},
				{
					"name": "Tertiary",
					"slug": "tertiary",
					"color": "#f0f6fc"
				},
				{
					"name": "Accent",
					"slug": "accent",
					"color": "#c73e1d"
				},
				{
					"name": "Neutral 100",
					"slug": "neutral-100",
					"color": "#f8f9fa"
				},
				{
					"name": "Neutral 200",
					"slug": "neutral-200",
					"color": "#e9ecef"
				},
				{
					"name": "Neutral 300",
					"slug": "neutral-300",
					"color": "#dee2e6"
				},
				{
					"name": "Neutral 400",
					"slug": "neutral-400",
					"color": "#ced4da"
				},
				{
					"name": "Neutral 500",
					"slug": "neutral-500",
					"color": "#adb5bd"
				},
				{
					"name": "Neutral 600",
					"slug": "neutral-600",
					"color": "#6c757d"
				},
				{
					"name": "Neutral 700",
					"slug": "neutral-700",
					"color": "#495057"
				},
				{
					"name": "Neutral 800",
					"slug": "neutral-800",
					"color": "#343a40"
				},
				{
					"name": "Neutral 900",
					"slug": "neutral-900",
					"color": "#212529"
				}
			]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontStyle": true,
			"fontWeight": true,
			"letterSpacing": true,
			"lineHeight": true,
			"textDecoration": true,
			"textTransform": true,
			"writingMode": false,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"name": "System",
					"slug": "system"
				},
				{
					"fontFamily": "Georgia, serif",
					"name": "Serif",
					"slug": "serif"
				},
				{
					"fontFamily": "'Courier New', Courier, monospace",
					"name": "Monospace",
					"slug": "monospace"
				}
			],
			"fontSizes": [
				{
					"name": "100",
					"size": "0.75rem",
					"slug": "100",
					"fluid": {
						"min": "0.75rem",
						"max": "0.875rem"
					}
				},
				{
					"name": "200",
					"size": "0.875rem",
					"slug": "200",
					"fluid": {
						"min": "0.875rem",
						"max": "1rem"
					}
				},
				{
					"name": "300",
					"size": "1rem",
					"slug": "300",
					"fluid": {
						"min": "1rem",
						"max": "1.125rem"
					}
				},
				{
					"name": "400",
					"size": "1.125rem",
					"slug": "400",
					"fluid": {
						"min": "1.125rem",
						"max": "1.25rem"
					}
				},
				{
					"name": "500",
					"size": "1.25rem",
					"slug": "500",
					"fluid": {
						"min": "1.25rem",
						"max": "1.5rem"
					}
				},
				{
					"name": "600",
					"size": "1.5rem",
					"slug": "600",
					"fluid": {
						"min": "1.5rem",
						"max": "1.875rem"
					}
				},
				{
					"name": "700",
					"size": "1.875rem",
					"slug": "700",
					"fluid": {
						"min": "1.875rem",
						"max": "2.25rem"
					}
				},
				{
					"name": "800",
					"size": "2.25rem",
					"slug": "800",
					"fluid": {
						"min": "2.25rem",
						"max": "2.75rem"
					}
				},
				{
					"name": "900",
					"size": "2.75rem",
					"slug": "900",
					"fluid": {
						"min": "2.75rem",
						"max": "3.5rem"
					}
				}
			]
		},
		"spacing": {
			"padding": true,
			"margin": true,
			"customSpacingSize": false,
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			],
			"spacingSizes": [
				{
					"name": "10",
					"size": "clamp(0.25rem, 1vw, 0.5rem)",
					"slug": "10"
				},
				{
					"name": "20",
					"size": "clamp(0.5rem, 2vw, 0.75rem)",
					"slug": "20"
				},
				{
					"name": "30",
					"size": "clamp(0.75rem, 3vw, 1rem)",
					"slug": "30"
				},
				{
					"name": "40",
					"size": "clamp(1rem, 4vw, 1.5rem)",
					"slug": "40"
				},
				{
					"name": "50",
					"size": "clamp(1.5rem, 5vw, 2rem)",
					"slug": "50"
				},
				{
					"name": "60",
					"size": "clamp(2rem, 6vw, 2.5rem)",
					"slug": "60"
				},
				{
					"name": "70",
					"size": "clamp(2.5rem, 7vw, 3rem)",
					"slug": "70"
				},
				{
					"name": "80",
					"size": "clamp(3rem, 8vw, 4rem)",
					"slug": "80"
				},
				{
					"name": "90",
					"size": "clamp(4rem, 9vw, 5rem)",
					"slug": "90"
				},
				{
					"name": "100",
					"size": "clamp(5rem, 10vw, 6rem)",
					"slug": "100"
				}
			]
		},
		"border": {
			"radius": true,
			"color": true,
			"style": true,
			"width": true
		},
		"custom": {
			"spacing": {
				"baseline": "1rem",
				"gutter": "var(--wp--preset--spacing--50)"
			},
			"typography": {
				"lineHeight": {
					"tight": "1.1",
					"normal": "1.5",
					"loose": "1.8"
				}
			},
			"effects": {
				"shadow": {
					"small": "0 1px 3px rgba(0, 0, 0, 0.12)",
					"medium": "0 4px 6px rgba(0, 0, 0, 0.12)",
					"large": "0 10px 25px rgba(0, 0, 0, 0.12)"
				},
				"borderRadius": {
					"small": "0.25rem",
					"medium": "0.5rem",
					"large": "1rem"
				}
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system)",
			"fontSize": "var(--wp--preset--font-size--300)",
			"lineHeight": "var(--wp--custom--typography--line-height--normal)"
		},
		"spacing": {
			"padding": {
				"top": "0",
				"right": "var(--wp--preset--spacing--40)",
				"bottom": "0",
				"left": "var(--wp--preset--spacing--40)"
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--secondary)"
					}
				},
				":focus": {
					"outline": {
						"width": "2px",
						"style": "solid",
						"color": "var(--wp--preset--color--primary)",
						"offset": "2px"
					}
				}
			},
			"button": {
				"border": {
					"radius": "var(--wp--custom--effects--border-radius--medium)"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--20)",
						"right": "var(--wp--preset--spacing--40)",
						"bottom": "var(--wp--preset--spacing--20)",
						"left": "var(--wp--preset--spacing--40)"
					}
				},
				"typography": {
					"fontWeight": "600",
					"fontSize": "var(--wp--preset--font-size--300)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)"
					}
				},
				":focus": {
					"outline": {
						"width": "2px",
						"style": "solid",
						"color": "var(--wp--preset--color--contrast)",
						"offset": "2px"
					}
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "700",
					"lineHeight": "var(--wp--custom--typography--line-height--tight)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--800)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--700)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--600)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--500)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--400)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--300)",
					"fontWeight": "600"
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--300)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--700)"
				}
			},
			"core/post-content": {
				"typography": {
					"lineHeight": "var(--wp--custom--typography--line-height--normal)"
				}
			},
			"core/pullquote": {
				"border": {
					"color": "var(--wp--preset--color--primary)",
					"style": "solid",
					"width": "1px 0"
				}
			},
			"core/quote": {
				"border": {
					"color": "var(--wp--preset--color--primary)",
					"style": "solid",
					"width": "0 0 0 1px"
				},
				"spacing": {
					"padding": {
						"left": "var(--wp--preset--spacing--40)"
					}
				}
			},
			"core/separator": {
				"border": {
					"color": "var(--wp--preset--color--neutral-300)",
					"style": "solid",
					"width": "0 0 1px 0"
				},
				"color": {
					"text": "var(--wp--preset--color--neutral-300)"
				}
			},
			"core/group": {
				"spacing": {
					"padding": "var(--wp--preset--spacing--40)"
				}
			},
			"core/columns": {
				"spacing": {
					"blockGap": "var(--wp--preset--spacing--50)"
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"styles": [
		{
			"name": "default",
			"label": "Default",
			"isDefault": true
		},
		{
			"name": "hero",
			"label": "Hero Section",
			"blockTypes": ["core/group"],
			"styles": {
				"color": {
					"background": "var(--wp--preset--color--base)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--100)",
						"bottom": "var(--wp--preset--spacing--100)",
						"left": "var(--wp--preset--spacing--50)",
						"right": "var(--wp--preset--spacing--50)"
					}
				},
				"typography": {
					"textAlign": "center"
				}
			}
		},
		{
			"name": "cta",
			"label": "Call to Action",
			"blockTypes": ["core/group"],
			"styles": {
				"color": {
					"background": "var(--wp--preset--color--accent)",
					"text": "var(--wp--preset--color--base)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--80)",
						"bottom": "var(--wp--preset--spacing--80)",
						"left": "var(--wp--preset--spacing--50)",
						"right": "var(--wp--preset--spacing--50)"
					}
				},
				"typography": {
					"textAlign": "center"
				}
			}
		},
		{
			"name": "contrast",
			"label": "Contrast Section",
			"blockTypes": ["core/group"],
			"styles": {
				"color": {
					"background": "var(--wp--preset--color--contrast)",
					"text": "var(--wp--preset--color--base)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--70)",
						"bottom": "var(--wp--preset--spacing--70)",
						"left": "var(--wp--preset--spacing--50)",
						"right": "var(--wp--preset--spacing--50)"
					}
				}
			}
		},
		{
			"name": "cards",
			"label": "Cards Section",
			"blockTypes": ["core/group"],
			"styles": {
				"color": {
					"background": "var(--wp--preset--color--neutral-100)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--60)",
						"bottom": "var(--wp--preset--spacing--60)",
						"left": "var(--wp--preset--spacing--50)",
						"right": "var(--wp--preset--spacing--50)"
					}
				},
				"border": {
					"radius": "var(--wp--custom--effects--border-radius--large)"
				},
				"css": "box-shadow: var(--wp--custom--effects--shadow--medium);"
			}
		},
		{
			"name": "feature",
			"label": "Feature Section",
			"blockTypes": ["core/group"],
			"styles": {
				"color": {
					"background": "var(--wp--preset--color--tertiary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--70)",
						"bottom": "var(--wp--preset--spacing--70)",
						"left": "var(--wp--preset--spacing--50)",
						"right": "var(--wp--preset--spacing--50)"
					}
				},
				"border": {
					"left": {
						"color": "var(--wp--preset--color--primary)",
						"style": "solid",
						"width": "4px"
					}
				}
			}
		},
		{
			"name": "testimonial",
			"label": "Testimonial Section",
			"blockTypes": ["core/group"],
			"styles": {
				"color": {
					"background": "var(--wp--preset--color--neutral-200)",
					"text": "var(--wp--preset--color--neutral-800)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--60)",
						"bottom": "var(--wp--preset--spacing--60)",
						"left": "var(--wp--preset--spacing--50)",
						"right": "var(--wp--preset--spacing--50)"
					}
				},
				"typography": {
					"fontStyle": "italic"
				}
			}
		},
		{
			"name": "gallery",
			"label": "Gallery Section",
			"blockTypes": ["core/group"],
			"styles": {
				"color": {
					"background": "var(--wp--preset--color--base)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--50)",
						"bottom": "var(--wp--preset--spacing--50)",
						"left": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--30)"
					}
				}
			}
		},
		{
			"name": "pricing",
			"label": "Pricing Section",
			"blockTypes": ["core/group"],
			"styles": {
				"color": {
					"background": "var(--wp--preset--color--neutral-100)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--80)",
						"bottom": "var(--wp--preset--spacing--80)",
						"left": "var(--wp--preset--spacing--40)",
						"right": "var(--wp--preset--spacing--40)"
					}
				},
				"border": {
					"radius": "var(--wp--custom--effects--border-radius--medium)"
				}
			}
		},
		{
			"name": "stats",
			"label": "Statistics Section",
			"blockTypes": ["core/group"],
			"styles": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--70)",
						"bottom": "var(--wp--preset--spacing--70)",
						"left": "var(--wp--preset--spacing--50)",
						"right": "var(--wp--preset--spacing--50)"
					}
				},
				"typography": {
					"textAlign": "center",
					"fontWeight": "600"
				}
			}
		},
		{
			"name": "footer-cta",
			"label": "Footer CTA Section",
			"blockTypes": ["core/group"],
			"styles": {
				"color": {
					"background": "var(--wp--preset--color--neutral-900)",
					"text": "var(--wp--preset--color--base)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--90)",
						"bottom": "var(--wp--preset--spacing--90)",
						"left": "var(--wp--preset--spacing--50)",
						"right": "var(--wp--preset--spacing--50)"
					}
				},
				"typography": {
					"textAlign": "center"
				}
			}
		}
	]
}
