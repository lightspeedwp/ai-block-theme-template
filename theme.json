{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "AI Block Theme Template",
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "620px",
      "wideSize": "1200px"
    },
    "color": {
      "palette": [
        { "slug": "base", "name": "Base", "color": "#ffffff" },
        { "slug": "contrast", "name": "Contrast", "color": "#000000" },
        { "slug": "primary", "name": "Primary", "color": "#007cba" }
      ]
    },
    "typography": {
      "fluid": true,
      "fontSizes": [
        { "name": "Small", "size": "0.875rem", "slug": "400" },
        { "name": "Medium", "size": "1rem", "slug": "500" },
        { "name": "Large", "size": "1.25rem", "slug": "600" }
      ]
    },
    "spacing": {
      "spacingSizes": [
        { "name": "Small", "size": "1rem", "slug": "40" },
        { "name": "Medium", "size": "1.5rem", "slug": "50" },
        { "name": "Large", "size": "2rem", "slug": "60" }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "#ffffff",
      "text": "#000000"
    }
  }
}
